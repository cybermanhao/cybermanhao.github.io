---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';
import BlogPostHeader from '../../components/BlogPostHeader.astro';
import TableOfContents from '../../components/TableOfContents';
import { getPostSlug, prefetchWaifuBatch, resolvePostCover, getTranslations, LANG_FLAGS } from '../../lib/blog';

const allPosts = await getCollection('blog');

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: getPostSlug(post.id) },
    props: post,
  }));
}

const post = Astro.props;
const { Content, headings } = await render(post);
if (!post.data.cover) await prefetchWaifuBatch(1);
const cover = await resolvePostCover(post.data.cover);

const currentSlug = getPostSlug(post.id);
const postsForTranslation = allPosts.map((p) => ({
  slug: getPostSlug(p.id),
  data: { lang: p.data.lang, translationOf: p.data.translationOf },
}));
const translations = getTranslations(currentSlug, post.data.translationOf, postsForTranslation);
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <!-- Back to blog list -->
  <a href="/blog" class="md:hidden inline-flex items-center gap-1.5 text-sm text-muted-foreground hover:text-primary transition-colors mb-6 font-tech">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
    </svg>
    <span data-i18n="nav.blog">博客</span>
  </a>

  <!-- Language notice for non-zh visitors -->
  <div data-lang-notice class="mb-6 px-4 py-2.5 rounded-lg bg-muted/50 border border-border text-sm text-muted-foreground text-center font-tech" style="display:none">
    The blogger mainly writes in Chinese ✧(≖ ◡ ≖✿)
  </div>

  <div class="relative">
    <BlogPostHeader
      title={post.data.title}
      pubDate={post.data.pubDate}
      updatedDate={post.data.updatedDate}
      tags={post.data.tags}
      body={post.body || ''}
      cover={cover}
    />
    {translations.length > 0 && (
      <div class="flex items-center gap-2 mb-6 text-sm text-muted-foreground font-tech">
        <span data-i18n="blog.otherLangs">其他语言版本：</span>
        {translations.map((tr) => (
          <a href={`/blog/${tr.slug}`} class="text-primary hover:underline">
            {LANG_FLAGS[tr.lang] || tr.lang} {tr.lang.toUpperCase()}
          </a>
        ))}
      </div>
    )}
    <article class="prose max-w-none">
      <Content />
    </article>
    {headings.length > 0 && (
      <TableOfContents headings={headings} client:visible />
    )}
  </div>
</BaseLayout>

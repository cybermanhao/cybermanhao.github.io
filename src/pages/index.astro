---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const posts = (await getCollection('blog'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <h1 class="mb-6 text-3xl font-bold">Latest Posts</h1>
  {posts.length === 0 ? (
    <p class="text-gray-500">No posts yet. Stay tuned!</p>
  ) : (
    <ul class="space-y-6">
      {posts.map((post) => (
        <li>
          <a href={`/blog/${post.id.replace(/\.(mdx?|md)$/, '')}`} class="group block">
            <h2 class="text-xl font-semibold group-hover:text-blue-600">
              {post.data.title}
            </h2>
            <p class="mt-1 text-sm text-gray-500">
              {post.data.pubDate.toLocaleDateString('zh-CN')}
            </p>
            <p class="mt-2 text-gray-600">{post.data.description}</p>
          </a>
        </li>
      ))}
    </ul>
  )}
</BaseLayout>
